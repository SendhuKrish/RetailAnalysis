pipeline {
	agent any
	environment {
		LABS = credentials('labcreds')
	}
	stages {
		stage('Build') {
			steps {
                echo "build completed"
			}
		}
		stage('Test') {
			steps {
				sh 'pipenv run pytest'
			}
		}
		stage('Package') {
			steps {
				sh 'zip -r retailproject.zip .'
			}
		}
		stage('Deploy') {
			steps {
				sh 'sshpass -p $LABS_PSW scp -o StrictHostKeyChecking=no -r . $LABS_USR@g02.itversity.com:/home/itv012326/retailproject'
		    }
	    }
    }
}